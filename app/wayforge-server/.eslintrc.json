{
  "extends": ["@banka"],
  // "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "import/extensions": [
          "error",
          {
            "ts": "never",
            "tsx": "never",
            "js": "never",
            "jsx": "never",
            "css": "always",
            "scss": "always",
            "client": "always",
            "server": "always",
            "schema": "always"
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
