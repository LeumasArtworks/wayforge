{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://tempest.games/wayfarer/schemata/reaction.schema.json",
  "title": "Energy",
  "description": "An elemental reaction in the game of Wayfarer.",
  "type": "object",
  "definitions": {
    "energyPacket": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "energyId": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier of the reaction."
    },
    "name": {
      "type": "string",
      "description": "The unique name of this reaction."
    },
    "time": {
      "type": "number",
      "description": "The time in whichever timeUnits that this reaction takes to complete."
    },
    "timeUnits": {
      "type": "string",
      "enum": [
        "seconds",
        "minutes",
        "hours",
        "days",
        "weeks",
        "months",
        "years"
      ],
      "description": "The units of time that this reaction takes to complete."
    },
    "reagents": {
      "type": "array",
      "description": "The inputs to this reaction.",
      "items": {
        "$ref": "#/definitions/energyPacket"
      }
    },
    "products": {
      "type": "array",
      "description": "The outputs from this reaction.",
      "items": {
        "$ref": "#/definitions/energyPacket"
      }
    }
  },
  "required": ["id", "name", "time", "timeUnits", "reagents", "products"]
}
