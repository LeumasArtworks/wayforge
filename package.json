    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react": "^3.0.1",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "dts-bundle-generator": "^7.1.0",
