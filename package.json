{
  "name": "@wayforge/monorepo",
  "version": "0.0.0",
  "description": "choose your path",
  "repository": "https://github.com/jeremybanka/wayforge",
  "author": "jeremybanka",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "dev": "cd app/wayforge-client && yarn dev",
    "start": "cd app/wayforge-server && yarn dev",
    "gen": "cd app/wayforge-server && yarn gen",
    "test": "cd lib && yarn test"
  },
  "workspaces": [
    "app/*",
    "lib",
    "wayfarer"
  ],
  "devDependencies": {
    "@banka/eslint-config": "^1.0.0",
    "@banka/eslint-config-react": "^1.0.0",
    "@emotion/styled": "^11.10.0",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.0.0",
    "@types/node": "16.11.7",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^2.0.1",
    "cross-env": "^7.0.3",
    "esbuild-sass-plugin": "^2.3.2",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.22.0",
    "framer-motion": "^7.2.1",
    "fs-extra": "^10.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "json-schema-to-zod": "^0.1.5",
    "prettier": "^2.7.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vite-plugin-svgr": "^2.2.1",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.22.1"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "ajv": "^8.11.0",
    "fp-ts": "^2.12.2",
    "hamt_plus": "^1.0.2",
    "helmet": "^4.6.0",
    "json-schema": "^0.4.0",
    "luum": "file:.yalc/luum",
    "pretty-print-json": "^1.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recoil": "^0.7.5",
    "recoil-sync": "^0.1.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "zod": "^3.18.0"
  },
  "keywords": [
    "react",
    "express",
    "typescript",
    "esbuild"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "test"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,css}": [
      "./node_modules/.bin/eslint --fix --ext .ts,.tsx"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@banka/react"
    ],
    "rules": {
      "import/extensions": [
        "error",
        {
          "ts": "never",
          "tsx": "never",
          "js": "never",
          "jsx": "never",
          "css": "always",
          "scss": "always",
          "client": "always",
          "server": "always",
          "schema": "always",
          "json": "always"
        }
      ]
    }
  }
}
