{
  "name": "@wayforge/monorepo",
  "version": "0.0.0",
  "description": "choose your path",
  "repository": "https://github.com/jeremybanka/wayforge",
  "author": "jeremybanka",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "yarn@3.4.1",
  "scripts": {
    "dev": "cd app/web/wayforge-client && yarn dev",
    "serve": "cd app/node/wayforge-server && yarn dev",
    "gen": "cd app/wayforge-server && yarn gen",
    "lint": "turbo run lint",
    "format": "eslint --fix",
    "build": "turbo run build",
    "test": "cross-env CI=true turbo run test:once",
    "release": "yarn build && changesets publish"
  },
  "workspaces": [
    "app/web/*",
    "app/node/*",
    "packages/*",
    "packages/@banka/*",
    "lib"
  ],
  "devDependencies": {
    "@changesets/cli": "2.26.0",
    "c8": "7.13.0",
    "cross-env": "7.0.3",
    "eslint": "8.34.0",
    "fs-extra": "11.1.0",
    "jest-environment-jsdom": "29.4.3",
    "json-schema-to-zod": "0.6.3",
    "mock-fs": "5.2.0",
    "prettier": "2.8.4",
    "tsx": "3.12.3",
    "turbo": "1.8.1",
    "typescript": "4.9.5"
  },
  "keywords": [
    "react",
    "express",
    "typescript"
  ]
}
