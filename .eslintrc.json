{
  "extends": "@banka/react",
  "rules": {
    "import/extensions": [
      "error",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never",
        "jsx": "never",
        "css": "always",
        "scss": "always",
        "web": "always",
        "node": "always",
        "schema": "always",
        "json": "always"
      }
    ],
    "react/no-unknown-property": ["error", { "ignore": ["css"] }]
  }
}
