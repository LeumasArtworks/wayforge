{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "^": ["lib/Luum/src"],
      "^/*": ["lib/Luum/src/*"],
      "~/*": ["*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "lib": ["ES2021", "dom"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2019"
  },
  "include": [
    "src",
    "test",
    "jest.config.js",
    "babel.config.js",
    "esbuild.config.js"
  ]
}
