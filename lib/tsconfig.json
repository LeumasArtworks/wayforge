{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["vitest"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "anvl": ["./Anvil"],
      "anvl/*": ["./Anvil/*"],
      "hamr": ["./Hammer"],
      "hamr/*": ["./Hammer/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/*.server.ts",
    "**/*.server.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.test.json.json" }
  ]
}
