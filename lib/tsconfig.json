{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": ["vitest"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["../*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/*.server.ts",
    "**/*.server.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
